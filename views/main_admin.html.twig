<html>
<head>
    <title>Catalogue</title>
    <link href="css/custom.css" rel='stylesheet' type="text/css">
    <link href="../../css/custom.css" rel='stylesheet' type="text/css">
    <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
    <body>
        <div class="container">

            <h1><center>Library Book Catalogue</center></h1>

            <div class="col-xs-8">
                <h2>Books</h2>
                {% if books is not empty %}
                    <ul>
                    {% for book in books %}
                        <li><a href="/book/{{ book.getId }}">{{ book.getTitle}}</a></li>

                        {% set book_author = book.getAuthors %}
                        <ul>
                            {% for author in book_author %}
                                <li>{{ author.getName }}</li>
                            {% endfor %}
                        </ul>
                    {% endfor %}
                    </ul>

                {% else %}
                    <p>The book catalogue is empty.</p>
                {% endif %}

                <form action="/book_added" method="post">
                    <div class="form-group">
                        <label for="title">Add a Book Title</label>
                        <input class="form-control" id="title" name="title" type="text" required autofocus>
                        <label for="copies">Add the number of copies</label>
                        <input class="form-control" id="copies" name="copies" type="number" value = 1>
                    </div>
                    <div class="form-group">
                        <label for="name">Author (separate multiple author names by comma)</label>
                        <input class="form-control" id="name" name="name" type="text" required>
                    </div>
                        <button type="submit" class="btn btn-info">Add</button>

                </form>

                <form action="/delete_books" method="post">
                    <button type="submit" class="btn btn-danger">Clear catalogue</button>
                </form>
            </div>
            <div class="col-xs-4">
                <br>
                <form action="/" method="get">
                    <button type="submit" class="btn-lg" style="background-color:white; width:250px">HOME</button>
                </form>
                <form action="/main_admin" method="get">
                    <button type="submit" class="btn-lg btn-danger" style="width:250px">Librarian Log-in</button>
                </form>
                <form action="/search" method="get">
                    <button type="submit" class="btn-lg btn-primary" style="width:250px">Find a Book!</button>
                </form>
            </div>


    </body>
</html>
